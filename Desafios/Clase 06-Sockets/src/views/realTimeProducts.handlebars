
<div class="container">
    <div class="col-6">
        <div class="container">
            <form id="form-products">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputTitle">Title</label>
                        <input type="text" class="form-control" id="title-product" placeholder="Title">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPrice">Price</label>
                        <input type="text" class="form-control" id="price-product" placeholder="Price">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCategory">Category</label>
                        <input type="text" class="form-control" id="category-product" placeholder="Category">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputStock">Stock</label>
                        <input type="text" class="form-control" id="stock-product" placeholder="Stock">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCode">Code</label>
                        <input type="text" class="form-control" id="code-product" placeholder="Code">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputThumbnail">Thumbnail</label>
                        <input type="text" class="form-control" id="thumbnail-product" placeholder="Thumbnail">
                    </div>
                </div>
            
                <div class="form-row">
                    <div class="form-group col">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="description-product" placeholder="Description" rows="3"></textarea>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary" id="btn-form" placeholder="Create Product">Create Product</button>
            </form>
        </div>
    </div>
    <div class="col-6">
        <h2>Lista de Productos con Handlebars y Sockets</h1>
        <div class="container" id="container-list-products">
          
            {{#each products}}
                <ul class="list-group mb-2">
                    <li class="list-group-item">Title: {{title}}</li>
                    <li class="list-group-item">Description: {{descripcion}}</li>
                    <li class="list-group-item">Price: {{price}}</li>
                    <li class="list-group-item">Code: {{code}}</li>
                    <li class="list-group-item">Stock: {{stock}}</li>
                    <li class="list-group-item">Category:{{category}}</li>
                    <li class="list-group-item">Thumbnail:<a href="{{thumbnail}}">Product's Image</a></li>
                    <li> <button type="button" class="btn btn-danger" value={{id}}>Delete</button>
                    </li>
                    
                </ul>
            {{/each}}
            

        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>