
<div class="container">
    <h1>Bievenido, {{firstName}}</h1>
    <di>
        <h2>Datos del usuario</h2>
        <div class="data-profile">
            <ul>
                <li>Email: {{email}}</li>
                {{#if admin}}
                    <li>Role: admin</li>
                {{else}}
                    <li>Role: user</li>
                {{/if}}
            </ul>
        </div>
    </di>
<a href='/logout'>LOGOUT</a>

    <h2>Lista de Productos</h2>
    {{#each listProducts}}
        <ul class="list-group mb-4">
            <li class="list-group-item">Title: {{title}}</li>
            <li class="list-group-item">Price: {{price}}</li>
            <li class="list-group-item">Stock: {{stock}}</li>
            <li class="list-group-item">Thumbnail:<a href="{{thumbnail}}">Product's Image</a></li>
            <li class="list-group-item">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" href="/products/{{_id}}" role="button">View Details</a>
                    <button type="button" class="btn btn-primary btn-add-product" data-title="{{title}}" value={{_id}}>Add to Cart</button>
                </div>
            </li>
        </ul>
    {{/each}}
    

</div>

<div class="d-flex justify-content-center w-100">
    <!-- Pagination links -->
{{#if paginationProducts.hasNextPage}}
  <a class="btn btn-outline-light" href="{{paginationProducts.nextLink}}">Next Page</a>
{{/if}}
{{#if paginationProducts.hasPrevPage}}
  <a class="btn btn-outline-light" href="{{paginationProducts.prevLink}}">Previous Page</a>
{{/if}}

</div>



<script src="/socket.io/socket.io.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/addProductToCart.js"></script>
